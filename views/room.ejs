    #video-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, 370px);
      grid-auto-rows: 370px;
    }
    
    video {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  </style>
</head>
